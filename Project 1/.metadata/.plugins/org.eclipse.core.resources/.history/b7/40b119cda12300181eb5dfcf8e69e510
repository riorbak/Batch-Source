	public void makeRequest(Reimbursement r) throws SQLException 
	{
		ConnFactory.getInstance();
		Connection conn = null;
		CallableStatement s = null;
		String statement = "{CALL NEW_REIM_REQ(?,?,?,?,?,?)}";
		
		try {			
			conn = ConnFactory.getConnection();			
			s = conn.prepareCall(statement);
			
			s.setInt(1, r.getAmount());
			s.setString(2, r.getDescription());
			s.setByte(3, r.getReceipt());
			s.setInt(4, r.getId());				//TODO: change to userID
//			s
//			s
			
			

			//s.execute();
			
			
		} catch (SQLException e) {
			System.out.println("An SQL exception occurred 503");
		} finally {
			if (s != null)
				s.close();
			if (conn != null)
				conn.close();
		}

		
		
		/* 	create or replace PROCEDURE NEW_REIM_REQ 
			( AMNT IN NUMBER, DESCRIPT IN VARCHAR2, RECIEPT IN BLOB,
			    AUTH IN NUMBER, R_TYPE IN NUMBER , R_STATUS IN NUMBER ) 
			  AS 
			BEGIN
			  INSERT INTO ERS_REIMBURSEMENTS VALUES(GEN_REIM_ID.NEXTVAL, AMNT, DESCRIPT, RECIEPT, T_SUBMIT, NULL,
			    AUTH, NULL, R_TYPE, R_STATUS);
			  COMMIT;
			END NEW_REIM_REQ; 
		 */
		
		
		
	}

